<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_only_form_view_marca" model="ir.ui.view">
        <field name="name">product.template.common.form.producto</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='categ_id']" position="after">
                <field name="eje"/>
                <field name="lado_montaje"/>
                <field name="medida"/>
                <field name="marca_vehiculo"/>
                <field name="modelo_carro"/>
            </xpath>
        </field>
    </record>
        <record id="product_template_only_form_view_productos" model="ir.ui.view">
        <field name="name">product.template.common.form.productos</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='taxes_id']" position="after">
                <field name="motor_cilindro"/>
                <field name="fecha_inicio"/>
                <field name="fecha_final"/>
                <field name="observacione"/>
            </xpath>
        </field>
    </record>
</odoo>


