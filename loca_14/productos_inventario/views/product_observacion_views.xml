<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_product_observacion_form" model="ir.ui.view">
        <field name="name">view.product.observacion.form</field>
        <field name="model">product.observacion</field>
        <field name="arch" type="xml">
            <form string="Observacion">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_product_observacion_tree" model="ir.ui.view">
        <field name="name">view.product.observacion.tree</field>
        <field name="model">product.observacion</field>
        <field name="arch" type="xml">
            <tree string="Observacion">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="action_product_observacion" model="ir.actions.act_window">
        <field name="name">Observacion</field>
        <field name="res_model">product.observacion</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>